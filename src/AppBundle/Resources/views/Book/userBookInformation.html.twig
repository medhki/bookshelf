        {% else %}
            <input class="col-2" type="number" name="price" value="0">
        {% endif %}
            <input class="btn btn-danger col-3" type="submit" name="sellToogle" value="{% if libraryBook.sell  %} don't sell {% else %} Put for sale {% endif %}">
    </form>


    <a class="btn btn-warning col-3" href="{{ path('giveaway_statut_toggle' , {'id':libraryBook.id }) }}">
